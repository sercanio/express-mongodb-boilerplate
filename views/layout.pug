html
  head
    title= name
    link(rel="icon" type="image/png" href="/public/favicon.png")/
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")

  body
    // Header
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
      div.container
        a.navbar-brand(href="/") Sample Page
        button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
          span.navbar-toggler-icon
        div.collapse.navbar-collapse(id="navbarNav")
          ul.navbar-nav
            if(authenticated)
              // Display logout button if authenticated
              li.nav-item
                a.nav-link(href="/profile")= user
              li.nav-item
                a.nav-link(href="/logout") Logout
            else
              // Display login button if not authenticated
              li.nav-item
                a.nav-link(href="/login") Login
              li.nav-item
                a.nav-link(href="/register") Signup

    block content
    // Footer
    div.footer.bg-dark.text-white.py-3
      div.container.text-center
        p.mb-0 Copyright Â© 2023 Your Company
